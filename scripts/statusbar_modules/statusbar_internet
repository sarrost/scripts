#!/bin/sh

# Show wifi ï‡« and percent strength or ðŸ›° if none.
# Show ï›¿ if connected to ethernet or '' if none.

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ðŸ›° " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "ã€š %s%s ã€›" "$(echo $wifiicon | sed 's/\%//')" "$(sed "s/down//;s/up/ï›¿/" /sys/class/net/e*/operstate 2>/dev/null)"
